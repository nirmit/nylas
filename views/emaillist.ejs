<!doctype html>
<html>
<head>
    <title>Email List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-envelope"></span> Email List</h1>
        <a href="/" class="btn btn-default btn-sm"><span class="fa fa-home"></span> Home</a>       
        <a href="/login" class="btn btn-default btn-sm"><span class="fa fa-sign-out"></span> Logout</a>
        <a href="/synccontactlist" class="btn btn-default btn-sm">Update Table</a>         
    </div>    
	<table class="table table-striped table-bordered table-hover table-condensed">
	<thead>
	<tr>    
    <th>Id</th>
    <th>Account Id</th>
    <th>Subject</th>
    <th>Action</th>    	
	</tr>
	</thead>
	<tbody>
	<% for (var i = 0; i < emails.length; i++) { %>
    <tr>      
      <td><%= emails[i].nylas_id %></td>      
      <td><%= emails[i].account_id %></td>
      <td><%= emails[i].subject %></td>
      <td><a href="/deleteemail/<%= emails[i].nylas_id %>"><span class="fa fa-remove"></span></a></td>      
  <% } %>
	</tbody>
	</table>
</div>
</body>
</html>

