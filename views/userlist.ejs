<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>User List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> User List</h1>
        <a href="/" class="btn btn-default btn-sm"> <span class="fa fa-home"></span> Home</a>&nbsp;&nbsp;<a href="/login" class="btn btn-default btn-sm"> <span class="fa fa-sign-out"></span> Logout</a>
    </div>
    <div class="text-right">
      <a class="btn btn-default btn-sm" href="/createuser"><span class="fa fa-user-plus"></span> Create New User</a><br><br>
    </div>
  <table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>accessToken</th>    
    <th>Action</th>    
  </tr>
  </thead>
  <tbody>
  <% if (userlist.length > 0) { %>
    <% for(var i=0; i < userlist.length; i++) { %>
      <tr>
        <td><%= userlist[i].firstname %></td>
        <td><%= userlist[i].lastname %></td>
        <td><%= userlist[i].email %></td>
        <td><%= userlist[i].phone %></td>
         <td><%= userlist[i].accessToken %></td>         
        <td><a href="<%= sitelink %>/edituser/<%= userlist[i].id %>"><span class="fa fa-edit"></span></a>&nbsp;<a href="<%= sitelink %>/removeuser/<%= userlist[i].id %>"><span class="fa fa-remove"></span></a></td> 
      </tr> 
    <% } %>
  <% }else{ %>
    <tr><td colspan="4" style="text-align:center;">No Users Found.</td></tr>
  <% } %>
  </tbody>
  </table>
</div>
</body>
</html>
