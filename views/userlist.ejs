
  <% include ./common/header.ejs %>
  <% include ./common/nav.ejs %>
  <div class="abc">       
    <section>
      <% if (message) { %>
      <% } %>
      <a href="/createuser"><button type="button" class="btn btn-primary" >Add User</button></a>
      <div class="inner-block usr_list_div">
      <h1>All User</h1>
      <div class="frm">
        <div class="table-responsive left width100">
        <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
        <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Role</th>          
        <th>Action</th>    
        </tr>
        </thead>
        <tbody>
        <% if (userlist.length > 0) { %>
        <% for(var i=0; i < userlist.length; i++) { %>
        <tr>
        <td><%= userlist[i].firstname %></td>
        <td><%= userlist[i].lastname %></td>
        <td><%= userlist[i].email %></td>
        <td><%= userlist[i].role %></td>        
        <td class="action">
        <a class="edit-icon" href="<%= sitelink %>/edituser/<%= userlist[i].id %>" title="Edit">Edit</a>
        <a class="delete-icon" data-confirm='Are you sure ?' href="<%= sitelink %>/removeuser/<%= userlist[i].id %>" title="Delete">Delete</a>         
        <a href="<%= sitelink %>/secure/<%= userlist[i].id %>" title="switch user">Switch User</a>
        </td>       
        </tr> 
        <% } %>
        <% }else{ %>
        <tr><td colspan="4" style="text-align:center;">No Users Found.</td></tr>
        <% } %>
        </tbody>
        </table>

        </div>
       </div>
    </section>
  </div>
  <% include ./common/footer.ejs %>













































