<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Edit User</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-edit"></span> Edit User</h1>
        <a href="/" class="btn btn-default btn-sm"> <span class="fa fa-home"></span> Home</a>&nbsp;&nbsp;<a href="/userlist" class="btn btn-default btn-sm"> <span class="fa fa-user"></span> User List</a>&nbsp;&nbsp;<a href="/login" class="btn btn-default btn-sm"> <span class="fa fa-sign-out"></span> Logout</a>
    </div>
<div class="col-sm-6 col-sm-offset-3">
    <!-- show any messages that come back with authentication -->
    <% if (message != '') { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- Edit User -->
    <form action="/edituser/<%= userdetails.id %>" method="post">
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="firstname" value="<%= (firstname != '') ? firstname : '' %>">
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname" value="<%= (lastname != '') ? lastname : '' %>">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" value="<%= (email != '') ? email : '' %>">
        </div>        
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input type="text" class="form-control" name="phone" value="<%= (phone != '') ? phone : '' %>">
        </div>
        <div class="form-group">
            <label>accessToken</label>
            <input type="text" class="form-control" name="accessToken" value="<%= (accessToken != '') ? accessToken : '' %>">
        </div>
        <input type="hidden" class="form-control" name="userid" value="<%= userdetails.id %>">                      
        <button type="submit" class="btn btn-warning btn-lg">Update User</button>
    </form>
</div>

</div>
</body>
</html>
